{% extends 'base.html.twig' %}

{% block title %}{{ slug }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <h3>Catégorie :</h3> <p>{{ program.category.name }}</p>
            <div>
                <h3>Liste des saisons :</h3>
                {% for season in seasons %}
                    <div>
                        <a href="{{ path('wild_show_season',{'id':season.id}) }}">Saison {{ season.number }} ({{ season.year }})</a>
                    </div>
                {% else %}
                    <p>Aucune saison trouvée.</p>
                {% endfor %}
            </div>
        </div>
    </div>

    <a href="{{ path('wild_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}